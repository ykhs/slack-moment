{
  "private": true,
  "version": "0.1.0",
  "workspaces": ["packages/*"],
  "engines": {
    "node": "8.6.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prebootstrap": "yarn install",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint --ext .js,.vue src/js config app",
    "lint:fix": "eslint --fix --ext .js,.vue src/js config app",
    "client:build": "lerna run build --stream",
    "client:watch": "lerna run watch --stream",
    "client:release": "lerna run release --stream",
    "server:dev": "lerna run server:dev --stream",
    "server:prod": "lerna run server:prod --stream",
    "heroku-postbuild": "yarn bootstrap && yarn client:relase"
  },
  "lint-staged": {
    "*.{js,json,css}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.6.0",
    "cross-env": "5.0.5",
    "dotenv": "4.0.0",
    "eslint": "4.9.0",
    "eslint-config-prettier": "2.6.0",
    "eslint-config-vue": "2.0.2",
    "eslint-plugin-html": "3.2.2",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-vue": "2.1.0",
    "husky": "0.14.3",
    "lerna": "2.4.0",
    "lint-staged": "4.2.3",
    "npm-run-all": "4.1.1",
    "prettier": "1.7.4",
    "rimraf": "2.6.2",
    "uglifyjs-webpack-plugin": "1.0.0-beta.2",
    "webpack": "3.7.1",
    "webpack-merge": "4.1.0",
    "autoprefixer": "7.1.5",
    "css-loader": "0.28.7",
    "csswring": "6.0.1",
    "extract-text-webpack-plugin": "3.0.1",
    "file-loader": "1.1.5",
    "html-webpack-plugin": "2.30.1",
    "postcss-easy-import": "3.0.0",
    "postcss-loader": "2.0.8",
    "vue-loader": "13.3.0",
    "vue-template-compiler": "2.5.2",
    "nodemon": "1.12.0",
    "debug": "3.1.0"
  }
}
